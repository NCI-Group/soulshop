<div id="container-sign-up-form">
  <h3>Create account</h3>
  <div id="sign-up-form" >
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "text-field", placeholder: "Enter your email address.."%>
      </div>

      <div class="field">
        <%= f.label :password%><%- if @minimum_password_length %>(<%= @minimum_password_length %> characters minimum)<% end %>
          </br></br>
        <%= f.password_field :password, autocomplete: "off", class: "password-field", placeholder: "Enter your password.."%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "password-field", placeholder: "Please confirm your password.."%>
      </div>

      <div class="actions">
        <%= f.submit "Create your Sould account", class:"create-account-button" %>
      </div>

      <div class="terms-and-conditions">
        By creating an account you agree to Sould's Conditions of Use & Sale. Important note, all sales are final. Souls are non refundable.
      </div>
    <% end %>

    <%= render "devise/shared/links"%>
  </div>
</div>
